{{#each comments}}
<div class="comment-feed">
  <div class="comment-container">
    <div class="comment-panel" id="pfp">
      <img class="comment-icon" src="{{user_image}}">
    </div>
    <div class="comment-panel" id="text">
      <div class="user-panel">
        <p class="user-name"><strong>{{username}}</strong> â€¢ 2 hrs ago</p>
        <div class="three-dots">
          <img src="../common/png/dots.png" onclick="openEditDelete('edit-delete-post-1')">
          <div id="edit-delete-post-1" class="edit-delete-post">
            <div class="option" onclick="closeEditDelete('edit-delete-post-1')">
              <img class="pen-stroke" src="../png/pen-stroke.png">
              <p>Edit Post</p>
            </div>
            <div class="option" onclick="closeEditDelete('edit-delete-post-1')">
              <img class="trash" src="../png/trash.png">
              <p>Delete Post</p>
            </div>
          </div>
        </div>
      </div>
      <p class="comment-text">{{commentText}}</p>
      <div class="post-footer">
        <div id="likes-bar" class="react-bar">
          <input type="image" class="like" src="../common/svg/thumbs-up-stroke.svg">
          <p id="like-counter" class="counter">{{likes}}</p>
        </div>
        <div id="dislikes-bar" class="react-bar">
          <input type="image" class="dislike" src="../common/svg/thumbs-up-stroke.svg">
          <p id="dislike-counter" class="counter">{{dislikes}}</p>
        </div>
        <div id="comments-bar" class="react-bar">
          <input type="image" class="comment" src="../common/svg/comment.svg">
          <p id="comment-counter" class="counter">{{replies}}</p>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}