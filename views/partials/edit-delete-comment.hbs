<div class="three-dots">
  <img src="../common/png/dots.png" class="three-dots-comment"> 
  
    <div comment-id="{{_id}}" class="edit-delete-comment">
      <a href="/edit-comment/{{_id}}" id="edit-option" class="option edit-comment">
        <img class="pen-stroke" src="../common/png/pen-stroke.png">
        <p>Edit Comment</p>
      </a>

      <a href="/delete-comment/{{_id}}" id="delete-option" class="option delete-comment">
        <img class="trash" src="../common/png/trash.png">
        <p>Delete Comment</p>
      </a>
    </div>   
</div>