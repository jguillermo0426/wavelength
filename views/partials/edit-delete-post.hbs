<div class="three-dots">
  <img src="../common/png/dots.png" id="edit-delete-btn"> 
  
    <div post-id="{{_id}}" class="edit-delete-post">
      <a href="/edit-post/{{_id}}" id="edit-option" class="option edit">
        <img class="pen-stroke" src="../common/png/pen-stroke.png">
        <p>Edit Post</p>
      </a>

      <a href="/delete-post/{{_id}}" id="delete-option" class="option delete">
        <img class="trash" src="../common/png/trash.png">
        <p>Delete Post</p>
      </a>
    </div>   
</div>