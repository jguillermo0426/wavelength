
{{#each liked_posts}}
 <div id="template" class="post">
        <div class="post-header">
        <img class="cover" src="{{postId.cover}}">
        <div class="post-titles">
          <p class="song-album-title"><a href="/">{{postId.trackName}}</a></p>
          <p class="artist"><a href="/">{{postId.artist}}</a></p>
            <div class="rating">
                {{{ratingStars postId.rating}}}
            </div>
            <p class="user-reviewed">reviewed by <a href="/profile-{{postId.user}}" class="user">{{postId.user}}</a> on <span class="date">{{postId.reviewDate}}</span></p>
            <div class="tags-area">
            <div class="tag">
                <p>{{postId.tag1}}</p>
            </div>
            <div class="tag">
                <p>{{postId.tag2}}</p>
            </div>
            <div class="tag">
                <p>{{postId.tag3}}</p>
            </div>
            </div>
        </div>
        </div>

        <div class="post-body">
        <p class="post-title">
            {{postId.title}}
        </p>
        <p class="post-text">
            {{{truncateText postId.postText 500}}}
            {{#if (showSeeMore postId.postText 500)}}
                <a href="{{postId.postLink}}" class="see-more"> See more</a>
            {{/if}}
        </p>
        </div>
        
        <div class="post-footer">
        <div id="likes-bar" class="react-bar">
            <input type="image" class="like" src="../common/svg/thumbs-up-stroke.svg">
            <p id="like-counter" class="counter">{{postId.likes}}</p>
        </div>

        <div id="dislikes-bar" class="react-bar">
            <input type="image" class="dislike" src="../common/svg/thumbs-up-stroke.svg">
            <p id="dislike-counter" class="counter">{{postId.dislikes}}</p>
        </div>

        <div id="comments-bar" class="react-bar">
            <input type="image" class="comment" src="../common/svg/comment.svg">
            <p id="comment-counter" class="counter">{{postId.comments}}</p>
        </div>
        </div>
</div>
{{/each}}

