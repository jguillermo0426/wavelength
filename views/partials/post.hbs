{{#each post_data}}
<div id="template" class="post">
        <div class="post-header">
        <img class="cover" src="{{cover}}">
        <div class="post-titles">
          <p class="song-album-title"><a href="/">{{trackName}}</a></p>
          <p class="artist"><a href="/">{{artist}}</a></p>
            <div class="rating">
                {{{ratingStars rating}}}
            </div>
            <p class="user-reviewed">reviewed by <a href="/profile-{{user}}" class="user">{{user}}</a> on <span class="date">{{reviewDate}}</span></p>
            <div class="tags-area">
            <div class="tag">
                <p>{{tag1}}</p>
            </div>
            <div class="tag">
                <p>{{tag2}}</p>
            </div>
            <div class="tag">
                <p>{{tag3}}</p>
            </div>
            </div>
        </div>
        </div>

        <div class="post-body">
        <p class="post-title">
            {{title}}
        </p>
        <p class="post-text">
            {{{truncateText postText 500}}}
            {{#if (showSeeMore postText 500)}}
                <a href="{{postLink}}" class="see-more"> See more</a>
            {{/if}}
        </p>
        </div>
        
        <div class="post-footer">
        <div id="likes-bar" class="react-bar">
            <input type="image" class="like" src="../common/svg/thumbs-up-stroke.svg">
            <p id="like-counter" class="counter">{{likes}}</p>
        </div>

        <div id="dislikes-bar" class="react-bar">
            <input type="image" class="dislike" src="../common/svg/thumbs-up-stroke.svg">
            <p id="dislike-counter" class="counter">{{dislikes}}</p>
        </div>

        <div id="comments-bar" class="react-bar">
            <input type="image" class="comment" src="../common/svg/comment.svg">
            <p id="comment-counter" class="counter">{{comments}}</p>
        </div>
        </div>
</div>
{{/each}}