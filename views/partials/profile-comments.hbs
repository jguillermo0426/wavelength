{{#each comment_data}}
  {{#unless deleted}}
    <div class="recent-comment">
      <div class="comment-body">
        <div class="comment-profile-picture">
          <img src="{{userId.user_image}}">
        </div>
        <div class="comment-info">
          <p class="comment-status"><span class="comment-username">{{userId.username}}
            </span> commented on <a href="/{{postId.title}}-{{postId._id}}" class="comment-title">{{postId.title}}</a> {{#if edited}} | Edited {{/if}}
          </p>
          <div id="time-commented">{{timeCommented}}</div>
          <p class="comment-content">
            {{{truncateText commentText 300}}}
            {{#if (showSeeMore commentText 300)}}
              <a href="/{{postId.title}}-{{postId._id}}" class="see-more"> See more</a>
            {{/if}}
          </p>
        </div>
        {{#if ../sameLoggedProfile}}
          {{> edit-delete-comment}}
        {{/if}}
      </div>
    </div>
  {{/unless}}
{{/each}} 


