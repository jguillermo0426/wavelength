          </p>
          <div id="time-commented">{{timeReplied}}</div>
          <p class="comment-content">
            {{{truncateText replyText 300}}}
            {{#if (showSeeMore replyText 300)}}
              <a href="/{{postId.title}}-{{postId._id}}" class="see-more"> See more</a>
            {{/if}}
          </p>
        </div>
        {{#if ../sameLoggedProfile}}
          {{> edit-delete-reply}}
        {{/if}}
      </div>
    </div>
  {{/unless}}
{{/each}} 