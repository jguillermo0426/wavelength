{{> navigation}}

<div class="edit-comment-parent">
  <form name="update-reply" action="/update-reply/{{reply._id}}" onsubmit="return validateReply()" method="post">
    <div class="edit-recent-comment">
      <p class="comment-status">Editing reply on <span class="comment-title">{{reply.postId.title}}</span></p>
      <div class="edit-comment-box ">
        <textarea placeholder="Write something..." name="replyText">{{reply.replyText}}</textarea>
      </div>
      <div class="edit-comment-footer">
        <button id="save-changes-btn" type="submit">Save Changes</button>
      </div>
    </div>
  </form>
</div>

