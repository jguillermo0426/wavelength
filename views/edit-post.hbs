{{> navigation}}
  <div class="feed">
    <form name="update-post" action="/update-post/{{post_data._id}}" method="post">
      <div class="post">
          <div class="panel" id="select-album">
              <img class="cover" src="{{post_data.cover}}">
          </div>
          <div class="panel">
              <p class="label">Edit Post</p>
              <div class="artist-label">
                  <p class="song-album-title">{{post_data.trackName}}</p>
                  <p class="artist">{{post_data.artist}}</p>
              </div>
              <div class="box-title">
                  <input class="title-area" type="text" value="{{post_data.title}}" name="title">
              </div>
                <div class="box-post">
                    <div class="box-header">
                        <div class="bold">B</div>
                        <div class="italics">&nbsp;I&nbsp;</div>
                        <div class="underline">U</div>
                        <div class="strikethrough">S</div>
                        <div class="markdown">Markdown Mode</div>
                    </div>
                    <textarea name="postText">{{post_data.postText}}</textarea>
              </div>
              <div class="bottom-label">
                  <div class="rating-label">
                      Rating
                      <div class="rate">
                        <input type="radio" id="star5" name="rate" value="5" />
                        <label for="star5" class="fas fa-star" title="text"></label>
                        <input type="radio" id="star4" name="rate" value="4" />
                        <label for="star4" class="fas fa-star" title="text"></label>
                        <input type="radio" id="star3" name="rate" value="3" />
                        <label for="star3" class="fas fa-star" title="text"></label>
                        <input type="radio" id="star2" name="rate" value="2" />
                        <label for="star2" class="fas fa-star" title="text"></label>
                        <input type="radio" id="star1" name="rate" value="1" />
                        <label for="star1" class="fas fa-star" title="text"></label>
                      </div>
                  </div>
                  <div class="tags-label">
                    Tags
                    <div class="tag-panel">
                    <div id="ck-button">
                      <label>
                          <input type="checkbox" value="1"><span>Artist</span>                      
                      </label>
                    </div>
                      <div id="ck-button">
                      <label>
                          <input type="checkbox" value="2"><span>Album</span>                        
                      </label>
                    </div>
                    <div id="ck-button">
                      <label>
                          <input type="checkbox" value="3"><span>Track</span>                        
                      </label>
                    </div>
                    <div id="ck-button">
                      <label>
                          <input type="checkbox" value="4"><span>Search</span>                        
                      </label>
                    </div> 
                    </div>
                  </div>
              </div>
              <div class="box-post-footer">
                <div class="empty-box">

                </div>
                <div class="empty-box">

                </div>
                <div class="empty-box">

                </div>
                  <button id="save-changes-btn" class="save-changes-btn" type="submit">Save changes</button>
              </div>
          </div>
      </div>
    </form>
  </div>