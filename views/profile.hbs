{{> navigation}}

<div id="edit-popup" class="edit-popup">
  <div class="edit-header">
    <img class="close-button" src="/common/png/x.png" onclick="closePopUp()">
    <p>Edit Profile</p>
    <button type="submit" class="save-button" onclick="closePopUp()">Save</button>
  </div>

  <div class="edit-banner">
    <img class="banner" src="{{user.header_image}}">
    <img class="banner-pen" src="../png/pen.png">
  </div>

  <img class="profile-pen" src="/common/png/pen.png">
  <div class="edit-profile-picture">
    <img src="{{user.user_image}}">
  </div>

  <div class="edit-details">
    <p>Display name</p>
    <div class="input-details">
      <input type="text" placeholder="Display name">
    </div>
  </div>

  <div class="edit-details">
    <p>Bio</p>
    <div class="input-details">
      <input type="text" placeholder="Bio">
    </div>
  </div>
</div>

<div class="profile-banner">
  <img src="{{{user.header_image}}}"/>
</div>
<div class="profile">
  <div class="profile-section">
    <img src="{{{user.user_image}}}"/>
    <div class="profile-elements">
      <div class="profile-info">
        <p id="username">{{user.username}}</p>
        {{#if user.bio}}
          <p id="bio">{{user.bio}}</p>
        {{else}}
          <p id="bio">no bio</p>
        {{/if}}
      </div>
      <button type="submit" class="edit-profile" onclick="openPopUp()">Edit Profile</button>
    </div>
  </div>
</div>


<div class="profile-feed">
  <div class="profile-options">
    <p id="posts-btn">Posts</p>
    <p id="comments-btn">Comments</p>
    <p id="likes-btn">Likes</p>
  </div>

  <!-- RECENT POSTS -->
  <div id="recent-posts-area">
    {{#if post_data.length}}
      {{> profile-post}}
    {{else}}
      <p class="no-content">
        There's nothing 
        <br>
        here...
      </p>
    {{/if}}
  </div>

  <!-- RECENT COMMENTS -->
  <div id="recent-comments-area">
    {{#if comment_data.length}}
      {{> profile-comments}}
    {{else}}
      <p class="no-content">
        There's nothing 
        <br>
        here...
      </p>
    {{/if}}
  </div>

  <!-- LIKES -->
  <div id="likes-area">
    {{#if likes_data.length}}
      {{> profile-likes}}
    {{else}}
      <p class="no-content">
        There's nothing 
        <br>
        here...
      </p>
    {{/if}}
  </div>
</div>