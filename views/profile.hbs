{{> navigation}}

{{> edit-profile}}

<div class="profile-banner">
  <img src="{{{viewuser.header_image}}}"/>
</div>
<div class="profile">
  <div class="profile-section">
    <img src="{{{viewuser.user_image}}}"/>
    <div class="profile-elements">
      <div class="profile-info">
        <p id="username">{{viewuser.username}}</p>
        {{#if viewuser.bio}}
          <p id="bio">{{viewuser.bio}}</p>
        {{else}}
          <p id="bio">no bio</p>
        {{/if}}
      </div>
      {{#if sameLoggedProfile}}
        <button type="submit" class="edit-profile">Edit Profile</button>
      {{/if}}
    </div>
  </div>
</div>


<div class="profile-feed">
  <div class="profile-options">
    <p id="posts-btn" class="profile-option">Posts</p>
    <p id="comments-btn" class="profile-option">Comments</p>
    <p id="likes-btn" class="profile-option">Likes</p>
  </div>

  <!-- RECENT POSTS -->
  <div id="recent-posts-area">
    {{#if post_data.length}}
      {{> profile-post}}
    {{else}}
      <p class="no-content">
        There's nothing 
        <br>
        here...
      </p>
    {{/if}}
  </div>

  <!-- RECENT COMMENTS -->
  <div id="recent-comments-area">
    {{#if comment_data.length}}
      {{> profile-comments}}
    {{else}}
      <p class="no-content">
        There's nothing 
        <br>
        here...
      </p>
    {{/if}}
  </div>

  <!-- LIKES -->
  <div id="likes-area">
    {{#if liked_posts.length}}
      {{> profile-likes}}
    {{else}}
      <p class="no-content">
        There's nothing 
        <br>
        here...
      </p>
    {{/if}}
  </div>
</div>