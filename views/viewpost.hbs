{{>navigation}}

<div class="feed">
    <div class="post">
        <div class="post-header">
            <img class="cover" src="{{post_data.cover}}">
            <div class="post-titles">
                <p class="song-album-title"><a href="/">{{post_data.trackName}}</a></p>
                <p class="artist"><a href="/">{{post_data.artist}}</a></p>
                <div class="rating">
                    {{{ratingStars post_data.rating}}}
                </div>
                <p class="user-reviewed">reviewed by <a href="/" class="user">{{post_data.user}}</a> on <span class="date">{{post_data.reviewDate}}</span></p>
                <div class="tags-area">
                    <div class="tag">
                        <p>{{post_data.tag1}}</p>
                    </div>
                    <div class="tag">
                        <p>{{post_data.tag2}}</p>
                    </div>
                    <div class="tag">
                        <p>{{post_data.tag3}}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="post-body">
            <p class="post-title">{{post_data.title}}</p>
            <p class="post-text">{{post_data.postText}}</p>
        </div>
        <div class="post-footer">
            <div id="likes-bar" class="react-bar">
                <input type="image" class="like" src="../common/svg/thumbs-up-stroke.svg">
                <p id="like-counter" class="counter">{{post_data.likes}}</p>
            </div>
            <div id="dislikes-bar" class="react-bar">
                <input type="image" class="dislike" src="../common/svg/thumbs-up-stroke.svg">
                <p id="dislike-counter" class="counter">{{post_data.dislikes}}</p>
            </div>
            <div id="comments-bar" class="react-bar">
                <input type="image" class="comment" src="../common/svg/comment.svg">
                <p id="comment-counter" class="counter">{{post_data.comments}}</p>
            </div>
        </div>

        <!-- COMMENTS SECTION -->
        <div class="comment-section">
            <div class="comment-label">
                <p>commenting as</p>
            </div>
            <div class="comment-user">
                <p>{{user.username}}</p>
            </div>
        </div>
        <textarea placeholder="Write a comment"></textarea>

        <div class="comment-footer">
            <div class="comment-submit">
                <p class="comment-button">Comment</p>
            </div>
        </div>

